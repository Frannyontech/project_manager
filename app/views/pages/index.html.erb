<nav class="navbar navbar-light bg-light justify-content-between">
    <a class="navbar-brand">Gestor de Proyectos</a>
    <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="state">
    </form>
</nav>

  
<h1 class="text-center my-5"> Dashboard</h1>

<div class="text-center">
    <button type="button" class="btn btn-warning btn-md text-center">
        <%= link_to "Crear un proyecto", pages_search_path%>
    </button>
</div>  


<table class="table table-bordered table-striped mt-4"> 

        <tr class="text-center bg-dark text-warning">
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>State</th>
        </tr>

        <% @projects.each do |project| %>
        <tr class="text-center">
            <td class="align-middle"><%= project.name %></td>
            <td class="align-middle text-left"><%= project.description %></td>
            <td class="align-middle"><%= project.date_start %></td>
            <td class="align-middle"><%= project.date_finish %></td>
            <td class="align-middle"><%= project.state %></td>
        </tr>
    <%end%>

</table>